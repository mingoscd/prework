*
	margin 0
	padding 0
	
.content
	width 1000px
	margin 0 auto
	position relative

header
	height 100px
	width 1000px
	margin 0 auto 10px auto
	background blue
	position relative
	img
		margin 0 20px
		background green
		margin-top 5px
		width 100px
		height 90px
	ul 
		position absolute
		bottom 0
		right 0
		display flex
		list-style none
		li
			margin 0 10px
			background green
			width 200px
			height 30px
			&:last-child
				margin-right 0
				
section
	margin 20px 0
	width 780px
	height 280px
	background pink
	& > *
		background green	
	&:first-child
		height 380px
		overflow hidden
		img
			height 220px
			width 780px
		ul
			background none
			list-style none
			display inline-flex
			margin-top 10px
			li
				width 160px
				height 150px
				background green
				margin-left 20px
				
	&:nth-child(2)
		position relative
		.s2-div-1
			height 100%
			width 160px
			background green
			margin-left 20px
		.s2-div-2, .s2-div-3
			position absolute
			right 0
			background green
			width 580px
			height 180px
			margin-top 20px
		.s2-div-2
			top 0
		.s2-div-3
			height 60px
			bottom 0
			
	&:nth-child(3)
			display -webkit-box
			& > div
				height 100%
				width 280px
				background green
				margin-left 20px
				&:first-child
					width 160px		
	
aside
	width 200px
	height 980px
	background pink
	position absolute
	top 0
	right 0
	& > div
		width 200px
		background green
		display inline-block
	.aside-div-1
		height 80px
		margin-bottom 10px
	.aside-div-2
		height 120px
		margin 10px 0
	.aside-div-3
		height 370px
		margin-bottom 10px
	.aside-div-4
		height 360px

footer
	width 100%
	height 130px
	background blue
	.container
		width 1000px
		margin 0 auto
		padding-top 15px
		img
			background green
			width 90px
			height 100px
			margin-left 20px
		ul
			display inline-flex 
			list-style none
			li
				margin 0 10px
				background green
				width 200px
				height 100px