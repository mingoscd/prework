*
	padding 0
	margin 0
	font-family arial

body
	background #F4F4EB

header
	background #1D2124
	width 100%
	*
		display inline-block
	div
		text-align center
		width 100%
		position absolute
		left 0		
		h1
			color white
			line-height 150px
	figure
		width 299px
		height 150px
		overflow hidden	
		img
			height 150px
			width auto
			

section
	background #D1D3E4
	margin 1em 6em
	padding 1em 3em
	text-align center
	position relative
	h2
		text-transform uppercase
		font-weight bold
		font-family calibri
		font-size 40px
	p
		text-align left
		margin 0.5em
	.specifications
		text-align left
		margin 0 8em
		li
			display list-item
	ul
		margin 2em 0
		text-decoration none
		li
			display inline-block
			figure
				height 130px
				width 130px
				text-align center
				img
					height 100px
					width 100px
					border 4px solid white
					background white
					border-radius 50%
				figcaption
					font-weight bold
					

.code-text
	padding 1em
	text-align left
	background #444
	width 25%
	font-family monospace
	font-size 14px
	line-height 22px
	color white
	border-radius 10px
	border-top-left-radius 3px
	border-bottom-left-radius 1px

.tab
	position relative
	.tab-bg
		transform perspective(6px) rotateX(3deg)
		background #555
		height 30px
		width 160px
		margin 1px 12px
		border-top-left-radius 10px
		border-top-right-radius 10px	
	span
		position absolute
		top 2px
		left 40px
		line-height 30px
		color #ccc
		
.button-layer
	width 25%
	text-align center		
	button
		font-size 18px	
		padding 0.5em 1em
		margin 1em
		border 0
		outline 0
		border-radius 5px
		background #3286E5
		box-shadow 6px 6px #2E3BC0, 5px 5px #2E3BC0, 4px 4px #2E3BC0, 3px 3px #2E3BC0, 2px 2px #2E3BC0, 1px 1px #2E3BC0
		transition 0.1s	
		&:active
			transform translate(3px, 3px)
			box-shadow 3px 3px #2E3BC0, 2px 2px #2E3BC0, 1px 1px #2E3BC0
		&:disabled
			background #aaa
			box-shadow 6px 6px #888, 5px 5px #888, 4px 4px #888, 3px 3px #888, 2px 2px #888, 1px 1px #888
			&:active
				transform translate(0px, 0px)
		a
			text-decoration none
			color white 
		

.prompt
	position absolute
	top 100px
	right 50px
	width 900px
	iframe
		width 100%
		height 580px