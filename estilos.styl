*
	padding 0
	margin 0
	font-family arial

body
	background #F4F4EB

header
	background #1D2124
	width 100%
	*
		display inline-block		
	h1
		color white
		vertical-align top
		line-height 150px
		margin-left 20%
	figure
		width 299px
		height 150px
		overflow hidden	
		img
			height 150px
			width auto
			

section
	background #D1D3E4
	margin 1em 6em
	padding 1em 3em
	text-align center
	h2
		text-transform uppercase
		font-weight bold
		font-family calibri
		font-size 40px
	ul
		margin 2em 0
		text-decoration none
		li
			display inline-block
			figure
				height 130px
				width 130px
				text-align center
				img
					height 100px
					width 100px
					border 4px solid white
					border-radius 50%
				figcaption
					font-weight bold
					